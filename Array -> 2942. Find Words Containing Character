class Solution {
public:
    vector<int> findWordsContaining(vector<string>& words, char x) {
        vector <int> indices;
        int count=0;
        for(int i=0; i<words.size(); i++){
            for(int j=0; j<words[i].length(); j++){
                if(words[i][j]==x){                             //words[i] means the ith word of the words vector string. words[i][j] means the jth letter of the ith word
                    indices.push_back(i);
                    break;
                }
            }
        }
        return indices;
    }

};
